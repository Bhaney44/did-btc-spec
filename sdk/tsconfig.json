{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "composite": true,
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
      "./src/**/*.ts"
  ],
  "exclude": [
      "**/*.spec.ts"
  ]
}
